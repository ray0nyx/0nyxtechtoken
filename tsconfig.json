{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable", "ES2015.Iterable", "ES2015.Promise", "ES2015.Collection"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - All disabled for development */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "checkJs": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,

    /* Type Checking - All disabled for development */
    "noPropertyAccessFromIndexSignature": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noImplicitOverride": false,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "ignoreDeprecations": "5.0",
    "skipDefaultLibCheck": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "d3-scale": ["src/types/d3-types.d.ts"],
      "d3-shape": ["src/types/d3-types.d.ts"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}